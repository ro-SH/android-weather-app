<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_header">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="info_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="secondary_text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="main_temp">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">34sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="hourly_main">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="pop">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/pop</item>
        <item name="android:textSize">10sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="daily_main">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="daily_secondary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MontserratBoldTextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
</resources>